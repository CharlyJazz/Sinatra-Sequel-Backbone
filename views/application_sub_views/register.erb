<div class="card py-4 px-4">
  <div class="card-block">
    <div class="text-center">
      <h3>
        {{ if (mode === 'register') { }}
        <i class="fa fa-lock"></i>
        Register:
        {{ } else if (mode === 'edit') { }}
        <i class="fa fa-edit"></i>
        Edit:
        {{ } }}
      </h3>
      <hr class="mt-2 mb-2">
    </div>
    <form id="form-register" enctype="multipart/form-data">
      <fieldset class="fieldset-information">
        <div class="md-form">
          <i class="fa fa-user prefix"></i>
          <input type="text" id="username" class="form-control" value="{{ try { }} {{= name }} {{ } catch(e) { }} {{= '' }} {{ } }}" required>
          <label for="username" data-error="Username already using">Your username</label>
        </div>
        <div class="md-form">
          <i class="fa fa-envelope prefix"></i>
          <input type="email" id="email" class="form-control" value="{{ try { }} {{= email }} {{ } catch(e) { }} {{= '' }} {{ } }}" required>
          <label for="email" data-error="Email already using">Your email</label>
        </div>
        <div class="md-form">
          <i class="fa fa-lock prefix"></i>
          <input type="password" id="password" class="form-control" required>
          <label for="password">Your password</label>
        </div>
        <div class="md-form">
          <i class="fa fa-lock prefix"></i>
          <input type="password" id="repeat" class="form-control" required>
          <label for="repeat">Repeat password</label>
        </div>
        <div class="text-center">
          <button class="btn btn-deep-purple" id="continue">Continue</button>
        </div>
      </fieldset>
      <fieldset class="fieldset-image hidden-element">
        <div class="text-center">
          <legend>Profile Picture:</legend>
        </div>
        <div class="md-form">
          <button type="button" class="btn btn-primary btn-block" id="trigger-image-input">
            Add Image
          </button>
          <div class="form-group inputDnD">
            <label class="sr-only" for="inputFile">Upload your image</label>
            <input type="file" class="form-control-file text-primary font-weight-bold"
                   id="inputFile" accept="image/*" data-title="Drag and drop a file"
                   required>
          </div>
        </div>
        <div class="view overlay hm-white-slight">
          <img class="img-fluid" id="preview-image">
          <a>
            <div class="mask waves-effect waves-light"></div>
          </a>
        </div>
        <div class="card-block text-center">
          <h4 class="card-title" id="preview-username"></h4>
          <p class="card-text" id="preview-email"></p>
          <hr>
        </div>
        <div class="text-center">
          <button class="btn btn-deep-purple" id="back">Back to form </button>
          {{ if (mode === 'register') { }}
          <button class="btn btn-deep-purple" id="submit" disabled>Join to community</button>
          {{ } else if (mode === 'edit') { }}
          <button class="btn btn-deep-purple" id="submit" disabled>Edit your info</button>
          {{ } }}
        </div>
      </fieldset>
    </form>
  </div>
  {{ if (mode === 'register') { }}
  <div class="modal-footer text-center">
    <div class="options text-center col-12">
      <p>Are you member? <a href="" class="switch">Log in</a></p>
    </div>
  </div>
  {{ } }}
</div>